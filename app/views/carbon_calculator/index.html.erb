<h1>Transport carbon calculator<h1>

<%= form_for :carbon_calculator, :url => { :action => "calculate" } do |f| %>
  <%= label_tag(:origin, 'Origin') %>
  <%= f.select :origin, ['Manchester, UK'], required: true %>

  <%= label_tag(:destination, 'Destination') %>
  <%= f.select :destination, ['Liverpool, UK'], required: true %>

  <%= label_tag(:transport_mode, 'Mode of transport') %>
  <%= f.select :transport_mode, ['transit', 'driving'], required: true %>

  <%= label_tag(:public_transport_mode, 'Public transport mode') %>
  <%= f.select :public_transport_mode, ['train', ''], required: true %>

  <%= submit_tag "Calculate" %>
<% end %>
